@* Fixed MainLayout.razor with proper navigation *@
@inherits LayoutComponentBase
@inject NavigationManager Navigation
@using Microsoft.AspNetCore.Components.Routing

<div class="app-container">
    <!-- Navigation Header -->
    <header class="app-header bg-primary text-white shadow-sm">
        <div class="container-fluid">
            <div class="d-flex justify-content-between align-items-center py-3">
                <div class="d-flex align-items-center">
                    <button class="btn btn-link text-white p-0 me-3 d-md-none" @onclick="ToggleSidebar" aria-label="Toggle navigation">
                        <i class="oi oi-menu" style="font-size: 1.2rem;"></i>
                    </button>
                    <h4 class="mb-0">
                        <i class="oi oi-code me-2"></i>
                        GitHub Actions Dashboard
                    </h4>
                </div>
                <nav class="d-none d-md-flex" role="navigation" aria-label="Main navigation">
                    <ul class="nav nav-pills">
                        <li class="nav-item">
                            <NavLink class="nav-link text-white" href="/" Match="NavLinkMatch.All">
                                <i class="oi oi-home me-1" aria-hidden="true"></i>
                                Dashboard
                            </NavLink>
                        </li>
                        <li class="nav-item">
                            <NavLink class="nav-link text-white" href="/deployments">
                                <i class="oi oi-list me-1" aria-hidden="true"></i>
                                All Actions
                            </NavLink>
                        </li>
                    </ul>
                </nav>
            </div>
        </div>
    </header>

    <!-- Mobile Sidebar Overlay -->
    <div class="sidebar-overlay @(sidebarOpen ? "show" : "")" @onclick="CloseSidebar" aria-hidden="true"></div>

    <!-- Mobile Sidebar -->
    <aside class="mobile-sidebar @(sidebarOpen ? "show" : "")" role="navigation" aria-label="Mobile navigation">
        <div class="sidebar-header">
            <h5 class="mb-0">Navigation</h5>
            <button class="btn btn-link p-0" @onclick="CloseSidebar" aria-label="Close navigation">
                <i class="oi oi-x"></i>
            </button>
        </div>
        <nav class="sidebar-nav">
            <ul class="nav flex-column">
                <li class="nav-item">
                    <NavLink class="nav-link" href="/" Match="NavLinkMatch.All" @onclick="CloseSidebar">
                        <i class="oi oi-home me-2" aria-hidden="true"></i>
                        Dashboard
                    </NavLink>
                </li>
                <li class="nav-item">
                    <NavLink class="nav-link" href="/deployments" @onclick="CloseSidebar">
                        <i class="oi oi-list me-2" aria-hidden="true"></i>
                        All Actions
                    </NavLink>
                </li>
            </ul>
        </nav>
    </aside>

    <!-- Main Content -->
    <main class="app-main" role="main">
        <ErrorBoundary>
            <ChildContent>
                @Body
            </ChildContent>
            <ErrorContent Context="error">
                <div class="container-fluid">
                    <div class="alert alert-danger" role="alert">
                        <h4 class="alert-heading">
                            <i class="oi oi-warning me-2" aria-hidden="true"></i>
                            Something went wrong
                        </h4>
                        <p>An unexpected error occurred while loading this page. Please try refreshing or contact support if the problem persists.</p>
                        <hr>
                        <p class="mb-0">
                            <button class="btn btn-outline-danger" @onclick="ReloadPage">
                                <i class="oi oi-reload me-1" aria-hidden="true"></i>
                                Reload Page
                            </button>
                        </p>
                    </div>
                </div>
            </ErrorContent>
        </ErrorBoundary>
    </main>

    <!-- Footer -->
    <footer class="app-footer bg-light border-top mt-auto">
        <div class="container-fluid">
            <div class="d-flex justify-content-between align-items-center py-3">
                <small class="text-muted">
                    © 2024 GitHub Actions Dashboard
                </small>
                <small class="text-muted">
                    <i class="oi oi-clock me-1" aria-hidden="true"></i>
                    Last updated: <span id="last-update-time">@DateTime.Now.ToString("HH:mm")</span>
                </small>
            </div>
        </div>
    </footer>
</div>

<style>
    .app-container {
        min-height: 100vh;
        display: flex;
        flex-direction: column;
    }

    .app-header {
        position: sticky;
        top: 0;
        z-index: 1020;
    }

    .app-main {
        flex: 1;
        padding: 0;
    }

    .app-footer {
        margin-top: auto;
    }

    .sidebar-overlay {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: rgba(0, 0, 0, 0.5);
        z-index: 1025;
        opacity: 0;
        visibility: hidden;
        transition: all 0.3s ease;
    }

        .sidebar-overlay.show {
            opacity: 1;
            visibility: visible;
        }

    .mobile-sidebar {
        position: fixed;
        top: 0;
        left: -300px;
        width: 300px;
        height: 100%;
        background: white;
        z-index: 1030;
        transition: left 0.3s ease;
        box-shadow: 2px 0 5px rgba(0, 0, 0, 0.1);
    }

        .mobile-sidebar.show {
            left: 0;
        }

    .sidebar-header {
        padding: 1rem;
        border-bottom: 1px solid #dee2e6;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .sidebar-nav {
        padding: 1rem 0;
    }

    /* NavLink active state styling */
    .nav-link.active {
        background-color: rgba(255, 255, 255, 0.1) !important;
        border-radius: 0.375rem;
    }

    /* Mobile sidebar active links */
    .mobile-sidebar .nav-link.active {
        background-color: var(--bs-primary);
        color: white !important;
    }

    @@media (min-width: 768px) {
        .mobile-sidebar, .sidebar-overlay

    {
        display: none;
    }

    }

    /* Focus styles for accessibility */
    .btn:focus,
    .nav-link:focus {
        outline: 2px solid #fff;
        outline-offset: 2px;
    }

    /* High contrast mode support */
    @@media (prefers-contrast: high) {
        .app-header

    {
        border-bottom: 2px solid;
    }

    .nav-link {
        border: 1px solid transparent;
    }

        .nav-link:focus {
            border-color: currentColor;
        }

    }

    /* Reduced motion support */
    @@media (prefers-reduced-motion: reduce) {
        .sidebar-overlay, .mobile-sidebar

    {
        transition: none;
    }

    }
</style>

@code {
    private bool sidebarOpen = false;

    private void ToggleSidebar()
    {
        sidebarOpen = !sidebarOpen;
    }

    private void CloseSidebar()
    {
        sidebarOpen = false;
    }

    private void ReloadPage()
    {
        Navigation.Refresh(forceReload: true);
    }
}